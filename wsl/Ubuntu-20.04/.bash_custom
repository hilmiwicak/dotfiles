#!/usr/bin/env bash

# advanced change directory
function d() {
  local hnum=16
  local new_dir index dir cnt

  if ! [ $# -eq 0 ]; then
    if [[ $# -eq 2 && ($1 = "--" || $1 = "-c") ]]; then
      shift
    else
      if ! {
        [ $# -eq 1 ] && [[ $1 =~ ^(-[0-9]{,2}|-|--|-c|[^-].*)$ ]]
      }; then
        cd "$@" || return
      fi
    fi
  fi

  case "$1" in
  --)
    local dir_stack
    dir_stack=$(dirs -v | fzf $FZF_DEFAULT_OPTS --height "${FZF_TMUX_HEIGHT:-5%}")
    if [ -n "$dir_stack" ]; then
      dir_stack=$(echo "$dir_stack" | awk '{print $1}')
      d -"$dir_stack"
    fi
    return
    ;;
  -c)
    echo "cleaning dirs stack"
    dirs -c
    return
    ;;
  esac

  new_dir=${1:-$HOME}
  if [[ "$new_dir" =~ ^-[0-9]{,2}$ ]]; then
    index=${new_dir:1}
    if [ -z "$index" ]; then
      new_dir=$OLDPWD
    else
      new_dir=$(dirs -l "+$index") || return
    fi
  fi
  pushd -- "$new_dir" >/dev/null || return
  popd -n +$hnum &>/dev/null || true
  new_dir=$PWD cnt=1
  while dir=$(dirs -l +$cnt 2>/dev/null); do
    if [ "$dir" = "$new_dir" ]; then
      popd -n +$cnt >/dev/null
      continue
    fi
    ((cnt++))
  done
}

export -f d

